remote procedure ResieveDataFromLoyaltyApp(string);

global webpublic procedure WebSendCustomerIDToKassa()
begin
	area webdata;
	json webjson;
	string 255 token,request;
	
	logtext(0,"WebSendCustomerIDToKassa");
	
	webgetpostdata(webdata);
	webjson = parsejsonarea(webdata);
	
	token = JSONGet(webjson,"token");

	if(token=="sdkhf76J56rKJHf5tg")then begin
		if(nonblank(JSONGet(webjson,"compcode")))then begin
			if(nonblank(JSONGet(webjson,"foruser")))then begin
				if(nonblank(JSONGet(webjson,"clientid")))then begin
					if(nonblank(JSONGet(webjson,"loycard")))then begin
				
						request = JSONGet(webjson,"compcode") & "," &  JSONGet(webjson,"foruser") & "," &  JSONGet(webjson,"clientid") & "," &  JSONGet(webjson,"loycard");
						AllClientsRemoteAsync.ResieveDataFromLoyaltyApp(request);
					end;
				end;
			end;
		end;
	end;
	
return;
end;