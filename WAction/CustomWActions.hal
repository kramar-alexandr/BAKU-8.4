			if(IVr.OKFlag==0 and IVr.Invalid==0)then begin
				ORr.OfficialSerNr = "RESFROM" & ":" & IVr.SerNr;
				if(readfirstkey("OfficialSerNr",ORr,1,true))then begin
					res = RE_CreateREORFormIV(ORr);
