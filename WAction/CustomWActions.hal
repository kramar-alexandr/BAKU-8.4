global updating procedure CreateORFormIV()
begin
	record ORVc ORr;
	record IVVc IVr;
	integer wn,cwn;
	boolean res;
	
	cwn = curwindow;
	deselectwindow(cwn,true);
	wn = motherwindow(cwn);
	if(windowstate(wn)==0)then begin
		getwindowrecord(wn,IVr);
		if(matrowcnt(IVr)>0)then begin
			if(IVr.OKFlag==0 and IVr.Invalid==0)then begin
				ORr.OfficialSerNr = "RESFROM" & ":" & IVr.SerNr;
				if(readfirstkey("OfficialSerNr",ORr,1,true)==false)then begin
					recordnew(ORr);
					res = RE_CreateORFormIV(ORr,IVr);
					if(res)then begin
						closewindow(cwn);
						OpenWindow("ORDClass",0,0,"","",ORr);
					end;
				end else begin
					messagebox(0,"По этой сч/ф уже есть резерв. Удалите его");
				end;
			end else begin
				messagebox(0,"Сч/ф уже утверждена");
			end;
		end else begin
			messagebox(0,"В сч/ф нет товаров");
		end;
	end else begin
		messagebox(0,"Сначала сохраните документ");
	end;

return;
end;


global updating procedure CreateREORFormIV()
begin
	record ORVc ORr;
	record IVVc IVr;
