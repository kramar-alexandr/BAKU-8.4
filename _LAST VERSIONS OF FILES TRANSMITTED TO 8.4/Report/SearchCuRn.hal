          end else begin
            acontact[cnt] = CUr.Code & "     " & CUr.Name;
          end;
        end;
        cnt = cnt + 1;
      end;  
    end;
  end;  
  if (cnt==0) then begin
    acontact[cnt] = USetStr(19391);
    cnt = cnt + 1;
  end;
  return;
