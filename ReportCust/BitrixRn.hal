global
procedure GeneralRepRn(record RcVc RepSpec)  
begin
	record RcVc RepSpec1;
	integer i,j,m,month;
	date sd,td,tmpdate,enddate;

	if(RepSpec.sEndDate>CurrentDate)then begin
		RepSpec.sEndDate = CurrentDate;
	end;
	sd = RepSpec.sStartDate;
	td = RepSpec.sEndDate;
	
	StartReportNoHeaderJob("GeneralReport");
		Startformat(15);
			OutString(0,0,"На период: " & sd & "-" & td,false);
		EndFormat;
		Black_Divider(0,1);
		Startformat(15);
			OutString(0,0,"Месяц",false);
			tmpdate = sd;
			enddate = td;
			while(tmpdate<=enddate)begin
				month = GetMonth(tmpdate);
				tmpdate = AddMonth(tmpdate,1);
				OutString(100,0,month,false);
			end;
			// OutString(300,0,"Всего на период: " & sd & "-" & td,false);
		EndFormat;
	EndJob;
return;
end;