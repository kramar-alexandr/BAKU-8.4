global updating procedure WebFindItemST()
begin
  record StockTakeVc STr,oldSTr;
  record INVc INr;
  record ItemStatusVc ISr;
  row StockTakeVc STrw;
  string 5 nl,delim;
  string 255 artcode,tstr;
  integer qty,i,rwcnt,total,comp;
