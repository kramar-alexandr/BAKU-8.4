function LongInt ERVcRecordDefaults(var record ERVc ERr,record ERVc ER2r,LongInt stat,LongInt long4)
BEGIN
  LongInt res;

  ERr.Date = CurrentDate;
  ERr.FrRate = blankval;
  ERr.ToRate1 = blankval;
  ERr.ToRate2 = blankval;
  ERVcRecordDefaults = res; 
  RETURN;
END;

