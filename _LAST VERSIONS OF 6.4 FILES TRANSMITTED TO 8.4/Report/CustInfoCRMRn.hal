		testf = true;
		active = false;
		if(nonblank(frcode) and CUr.Code>tocode)then begin TrHs = false; testf = false; end;
		if(RepSpec.flags[4]>0 and CUr.DateCreated>RepSpec.sEndDate)then begin testf = false; TrHs = false; end;
		
