	integer keyint;
	boolean TrHs,testf;
	record LetVc Letr;
	record CompaniesBlock CBb;
	row CompaniesBlock CBrw;
	integer i,mtrw,curcomp;
	record IVVc IVr;
	boolean active;
	string 100 companyname;
	record GlobalLocationVc Glocr;
	
